@page
@using WebCars.Models
@model WebCars.Pages.Cars.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Car.ID" />
            <div class="form-group">
                <label asp-for="Car.Title" class="control-label"></label>
                <input asp-for="Car.Title" class="form-control" />
                <span asp-validation-for="Car.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.ReleaseDate" class="control-label"></label>
                <input asp-for="Car.ReleaseDate" class="form-control" />
                <span asp-validation-for="Car.ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Genre" class="control-label"></label>
                <input asp-for="Car.Genre" class="form-control" />
                <span asp-validation-for="Car.Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Price" class="control-label"></label>
                <input asp-for="Car.Price" class="form-control" />
                <span asp-validation-for="Car.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.BrandId" class="control-label"></label>
                <select asp-for="Car.BrandId" class="form-control" asp-items="ViewBag.BrandId"><option value="">Не выбрано</option></select>
                <span asp-validation-for="Car.BrandId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Brake" class="control-label"></label>
                <select asp-for="Car.Brake" class="form-control" asp-items="Html.GetEnumSelectList<Brake>()"><option value="">Не выбрано</option></select>
                <span asp-validation-for="Car.Brake" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
